
PASS=""

for file in $(git diff --cached --name-only --diff-filter=ATMR --line-prefix=./ | grep "\.go\$")
do
    # formats the file
    go fmt $file
    if [[ $? -ne 0 ]]; then
		PASS="go fmt error"
	fi

    # runs linter
	staticcheck $file 
	if [[ $? -ne 0 ]]; then
		PASS="staticcheck error"
	fi
    
    # go vet reports suspicious constructs
    go vet $file
    if [[ $? != 0 ]]; then
        PASS="go vet error"
    fi
done

if [ -z "$PASS" ]; then
    echo "COMMIT SUCCEEDED"
else
    echo "COMMIT FAILED - $PASS"
    exit 1
fi




