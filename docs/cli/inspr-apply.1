.PP
\fB\-s\fP, \fB\-\-scope\fP=""
	inspr  \-\-scope app1.app2

.PP
\fB\-u\fP, \fB\-\-update\fP[=false]
	inspr apply (\-f FILENAME | \-k DIRECTORY) \-\-update


